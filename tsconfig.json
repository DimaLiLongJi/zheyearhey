{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "build",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "noEmitHelpers": false,
    "lib": ["dom", "es2015.promise", "es5", "es2017"],
    "allowJs": true,
    "paths": {
      "@indiv/*": ["../indiv/packages/*"],
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
